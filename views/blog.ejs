<section class="inner-banner">
    <div class="container text-center">
        <h3>Blog Page</h3>
        <div class="breadcumb">
            <a href="#">Home</a>
            <!--
            --><span class="sep">-</span>
            <!--
            --><span class="page-name">Blog Page</span>
        </div><!-- /.breadcumb -->
    </div><!-- /.container -->
</section><!-- /.inner-banner -->

<section class="blog-page blog-style-one sec-pad">
    <div class="container">
        <div class="row">
            <div class="col-md-8">

                <% posts.forEach((post)=> { %>
                    <div class="single-blog-style-one">
                        <div class="img-box">
                            <% post.image = `data:${post.imageType};charset=utf-8;base64,${post.image.toString('base64')}`  %>
                            <img src="<%=post.image%>" alt="Awesome Image">
                            <a href="/blog-details/<%=post.id%>" class="read-more">Read Post</a>
                        </div><!-- /.img-box -->
                        <div class="text-box">
                            <a href="/blog-details/<%=post.id%>">
                                <h3>
                                    <%= post.title %>
                                </h3>
                            </a>
                            <p>
                                <%=post.description%>
                            </p>
                            <div class="meta-info">
                                <a href="#"><i class="far fa-calendar"></i>
                                    <%=post.createdAt.toDateString() %>
                                </a>
                                <a href="#"><i class="far fa-user"></i>
                                    <%=post.username%>
                                </a>
                            </div><!-- /.meta-info -->
                        </div><!-- /.text-box -->
                    </div>
                    <% }) %>


                    <% if (pages > 0) { %>
                        <ul class="pagination text-center">
                            <% if (current == 1) { %>
                                <li class="disabled"><a>First</a></li>
                            <% } else { %>
                                <li><a href="/blog/1">First</a></li>
                            <% } %>
                            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                            <% if (i !== 1) { %>
                                <li class="disabled"><a>...</a></li>
                            <% } %>
                            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                <% if (i == current) { %>
                                    <li class="active"><a><%= i %></a></li>
                                <% } else { %>
                                    <li><a href="/blog/<%= i %>"><%= i %></a></li>
                                <% } %>
                                <% if (i == Number(current) + 4 && i < pages) { %>
                                    <li class="disabled"><a>...</a></li>
                                <% } %>
                            <% } %>
                            <% if (current == pages) { %>
                                <li class="disabled"><a>Last</a></li>
                            <% } else { %>
                                <li><a href="/blog/<%= pages %>">Last</a></li>
                            <% } %>
                        </ul>
                    <% } %>


                        <!-- <div class="blog-post-pagination">
                            <a href="#"><i class="fa fa-angle-left"></i></a>

                            <a href="#" class="active">1</a>

                            <a href="#">2</a>

                            <a href="#">3</a>

                            <a href="#">4</a>

                            <a href="#"><i class="fa fa-angle-right"></i></a>
                        </div> -->
            </div>


            <div class="col-md-4">
                <div class="sidebar sidebar-right">
                    
                   
                        
                           
                    <!-- /.single-sidebar -->
                    


                     <!-- /.archive-lists -->
                     
                     <%- include('../views/partials/archive',{blogInfo}) %>





                    
                </div><!-- /.sidebar sidebar-right -->
            </div><!-- /.col-md-4 -->
        </div><!-- /.row -->
    </div><!-- /.container -->

    <script src="/js/lib/jquery-3.4.1.min.js"></script>
    <script src="/blog.js"></script>
</section><!-- /.blog-page sec-pad -->